// size of double linked list
#include <iostream>
using namespace std;

class DoublyLinkedList {
    struct Node {
        int data;
        Node* prev;
        Node* next;
    };
    Node* head;
public:
    DoublyLinkedList() { head = NULL; }
    void create(int n) {
        Node* temp = NULL;
        for (int i = 0; i < n; i++) {
            int val;
            cout << "Enter value: ";
            cin >> val;
            Node* newNode = new Node{val, NULL, NULL};
            if (head == NULL) {
                head = newNode;
                temp = head;
            } else {
                temp->next = newNode;
                newNode->prev = temp;
                temp = newNode;
            }
        }
    }
    void size() {
        int count = 0;
        Node* temp = head;
        while (temp != NULL) {
            count++;
            temp = temp->next;
        }
        cout << "Size of Doubly Linked List = " << count << endl;
    }
};

int main() {
    DoublyLinkedList list;
    int n;
    cout << "Enter number of nodes: ";
    cin >> n;
    list.create(n);
    list.size();
    return 0;
}

// size of circularlist
#include <iostream>
using namespace std;

class CircularLinkedList {
    struct Node {
        int data;
        Node* next;
    };
    Node* head;
public:
    CircularLinkedList() { head = NULL; }
    void create(int n) {
        Node* temp = NULL;
        for (int i = 0; i < n; i++) {
            int val;
            cout << "Enter value: ";
            cin >> val;
            Node* newNode = new Node{val, NULL};
            if (head == NULL) {
                head = newNode;
                temp = head;
            } else {
                temp->next = newNode;
                temp = newNode;
            }
        }
        temp->next = head;
    }
    void size() {
        if (head == NULL) {
            cout << "Size = 0" << endl;
            return;
        }
        int count = 0;
        Node* temp = head;
        do {
            count++;
            temp = temp->next;
        } while (temp != head);
        cout << "Size of Circular Linked List = " << count << endl;
    }
};

int main() {
    CircularLinkedList list;
    int n;
    cout << "Enter number of nodes: ";
    cin >> n;
    list.create(n);
    list.size();
    return 0;
}
